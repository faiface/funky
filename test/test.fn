record Person = name : String, age : Int

func list->string : (a -> String) -> List a -> String =
    \string \list
    if (empty? list)
        "";
    if (empty? (rest list))
        (string (first list));
    string (first list) ++ ", " ++ list->string string (rest list)

func string : Bool -> String =
    \bool
    switch bool
    case true  "true"
    case false "false"

func range : Int -> Int -> List Int =
    \from \to
    if (from > to)
        [];
    from :: range (from + 1) to

func main : IO =
    print "Say your first name: ";
    scan \first-name
    println ("Hello, " ++ first-name ++ "!");
    print "Say your last name: ";
    scan \last-name
    println ("Greetings, Mr " ++ last-name ++ "!");
    done
