func main : IO =
    100 |> 1 |> fix \loop \low \high
        let ((low + high) / 2) \mid
        print ("Is your number " ++ string mid ++ "? ");
        scanln \answer
        if (answer == "less")
            (loop low (mid - 1));
        if (answer == "more")
            (loop (mid + 1) high);
        if (answer == "yes")
            (println "Yay!"; done);
        println "You need to type one of less/more/yes.";
        loop low high
